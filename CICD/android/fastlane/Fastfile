default_platform(:android)

platform :android do
  desc "Runs all the tests"
  lane :test do
    gradle(task: "test")
  end

  lane :rename do 
    rename_android_package(                                                                                                                                                                                                                                                              
      path: "./",                                                                                                                                                                                                                                                                        
      package_name: "com.cicd.nhanhuynh.app",                                                                                                                                                                                                                                        
      new_package_name: "com.cicd.app.pro"                                                                                                                                                                                                                                  
    )
  end
  
  desc "Deploy beta app to Google Play"
  lane :beta do |options|
    gradle(task: "clean")
    gradle(
      task: 'assemble',
      build_type: 'Beta'
    )
    if options[:upload_store]
      supply(
        track: 'beta',
        skip_upload_metadata: true,
        skip_upload_images: true,
        release_status: 'draft',
        skip_upload_screenshots: true,
        package_name: 'com.cicd.nhanhuynh.app'
      )
    end
  end
  desc "Deploy prod app to Google Play"
  lane :prod do |options|
    gradle(task: "clean")
    rename
    gradle(
      task: 'assemble',
      build_type: 'Prod'
    )
    if options[:upload_store]
      supply(
        track: 'production',
        skip_upload_metadata: true,
        skip_upload_images: true,
        skip_upload_screenshots: true,
        release_status: 'draft',
        package_name: 'com.cicd.app.pro'
      )
    end
  end
end
